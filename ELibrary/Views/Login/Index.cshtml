@model ELibrary.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post)) {
    @Html.AntiForgeryToken();

    <div class="row">
        <div class="col-md-2">
            <h4>Email</h4>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.user_email, new {
                htmlAttributes = new { @class = "form-control" }
            })
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <h4>Password</h4>
        </div>
        <div class="col-md-10">
            @Html.PasswordFor(model => model.user_password, new {
                @class = "form-control"
            })
        </div>
    </div>

    <br />
    <div class="row">
        <div class="col-md-6 pt-5">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
}

@if (TempData["alert"] != null) {
    <script type="text/javascript">
        alert("@TempData["alert"]");
        @TempData["alert"] = null;
    </script>
}